FROM centos:6
MAINTAINER GoCD Team <go-cd-dev@googlegroups.com>

COPY . /chef-cookbooks

RUN rpm -ivh https://packages.chef.io/files/stable/chef/13.4.24/el/6/chef-13.4.24-1.el6.x86_64.rpm && \
    chef-solo -c /chef-cookbooks/solo.rb -j /chef-cookbooks/solo-centos6.json && \
    yum remove chef -y && \
    yum clean all --enablerepo='*' && \
    rm -rf /chef-cookbooks/ /root/.cache && \
    dbus-uuidgen > /var/lib/dbus/machine-id

ENTRYPOINT ["/bin/tini", "--"]

USER go

CMD ["/bin/bash", "-lc", "/bootstrap.sh"]
